<button
  id="EcomDialogTrigger-{{ block.id }}"
  {{ block.shopify_attributes }}
  class="ecom-dialog-trigger-{{ block.id }} trigger-dialog">
  <span>+</span>

</button>
<style>

  .ecom-dialog-trigger-{{ block.id }} {
    position: absolute;
    border-radius: 9999px;
    padding: 0.2rem 0.5rem;
    box-shadow: 1px 1px 3px #333;
    background: #f5f5f5;
    border: none;
    cursor: pointer;
    margin: 0;
    line-height: 1;
    top: {{ block.settings.position-y | default: 10 }}%;
    left: {{ block.settings.position-x | default: 10 }}%;
  }
</style>


{% schema %}
  {
    "name": "ecom-dialog-product",

    "settings": [

      {
        "type": "range",
        "min": 0,
        "max": 100,
        "default": 0,
        "step": 1,
        "label": "position-x",
        "id": "position-x"
      }, {
        "type": "range",
        "min": 0,
        "max": 100,
        "default": 0,
        "step": 1,
        "label": "position-y",
        "id": "position-y"
      }
    ],
    "presets": [
      {
        "name": "ecom-dialog-product",
        "settings": {}
      }
    ]
  }
{% endschema %}