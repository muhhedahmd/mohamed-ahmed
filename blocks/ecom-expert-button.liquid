<button
  {% if block.settings.select-varient == "primary" %}
  class="primary ecom-expert-button"
  {% else %}
  class="secondary ecom-expert-button"
  {% endif %}
  onclick="location.href='{{ block.settings.button_url }}'">
  <div class="content-btn">

    {%- case block.settings.select-Text-case -%}
      {%- when "upcase" -%}
        {{ block.settings.button_text | upcase }}
      {%- when "downcase" -%}
        {{ block.settings.button_text | downcase }}
      {%- when "capitalize" -%}
        {{ block.settings.button_text | capitalize }}
        {%- else -%}
    {%- endcase -%}
    {% comment %} {%- endcase -%} {% endcomment %}

    {%- if block.settings.checkbox == true -%}

      {%- if block.settings.image != blank -%}
        <img
          src="{{ block.settings.image | img_url: '100x' }}"
          height="20"
          width="20"
          alt="button image">

      {%- else -%}
        <img
          class="arrow-icon"
          src="{{  "Arrow1.svg"  |  asset_url }}"
          height="20"
          width="20"
          alt="button image">


      {%- endif -%}
    {%- endif -%}

  </div>


</button>


<style>
  .ecom-expert-button {

    overflow: hidden;
    position: relative;
    border: none;
    outline: none;
    padding: 0.9rem 2.2rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }
  .primary {
    color: #000;
    background-color: #fff544;
  }
  .secondary {
    color: #fff;
    background-color: #000;
  }

  .ecom-expert-button::before {
    transition: all 0.6s ease;
    position: absolute;
    top: 0;
    right: 100%;
    content: "";
    width: 100%;
    height: 100%;

  }

  .content-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    transition: all 0.6s ease;
    position: relative;
    z-index: 1;
  }
  .ecom-expert-button:hover::before {
    right: 0;
  }

  .primary::before {
    background: #000;
  }

  .secondary::before {
    background: #fff;
  }

  .primary:hover .content-btn {

    color: #fff;
  }
  .secondary:hover .content-btn {
    color: #000;
  }

  .secondary .content-btn img {
    filter: invert(1);
  }

  .primary:hover .content-btn img {

    filter: invert(1);
  }
  .secondary:hover .content-btn img {
    filter: invert(0);

  }

  .secondary:hover {
    border: 0.5px solid #000;
  }

</style>

{% schema %}
  {
    "name": "ecom-expert-button.name",
    "tag": "div",
    "class": "ecom-expert-div",
    "settings": [
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Shop Now"
      },
      {

        "type": "select",
        "id": "select-varient",
        "label": "select Button variant",
        "default": "primary",
        "options": [
          {
            "value": "primary",
            "label": "Primary"
          }, {
            "value": "secondary",
            "label": "Secondary"
          }
        ]
      },
      {

        "type": "select",
        "id": "select-Text-case",
        "label": "select Button Text Case",
        "default": "upcase",
        "options": [
          {
            "value": "upcase",
            "label": "upcase"
          }, {
            "value": "downcase",
            "label": "downcase"
          }, {
            "value": "capitalize",
            "label": "Capitalize"
          }
        ]
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button URL",
        "default": "/"
      }, {
        "type": "checkbox",
        "id": "checkbox",
        "label": "Enable image",
        "default": true
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Button Image"
      }
    ],
    "presets": [
      {
        "name": "ecom-expert-button.name",
        "settings": {
          "button_text": "Shop Now",
          "select-varient": "primary"

        }
      }
    ]
  }
{% endschema %}